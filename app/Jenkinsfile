pipeline {
    agent any


    environment {     
        DOCKERHUB_CREDENTIALS= credentials('dh')     
    }


    stages {          
        stage('Build') {
            steps {
                script {
                    sh "docker build -f app/Dockerfile -t $DOCKERHUB_CREDENTIALS_USR/cicd_challenge:1.0.0-$BUILD_NUMBER ."
                }
                echo 'Build done!'
            }
        }
        stage('Test') {
            steps {
                script {
                    sh "npm i"
                    sh "npm test"
                    echo 'Test passed! wii'
                }
                
            }
        }
        stage('Release') {
            steps {
                script {
                    sh "docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW"
                    sh "docker push $DOCKERHUB_CREDENTIALS_USR/cicd_challenge:1.0.0-$BUILD_NUMBER"
                    echo 'Release mounted! siu'
                }
                
            }
        }
    }
}
